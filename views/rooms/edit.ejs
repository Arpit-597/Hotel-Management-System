<%- include('../admin/header.ejs') %>
    <!-- This is used to include another ejs file content in another file -->

    <%- include('../admin/sidebar.ejs') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">Edit Rooms</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Rooms Page</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <!-- <div class="card-header">
                            <h2>Edit Rooms</h2>

                        </div> -->
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form action="/roomsupdate/<%= room._id %>" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Room Title</label>
                                    <input type="text" name="title" value="<%= room.title %>" class="form-control"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea name="description" class="form-control"><%= room.description %></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Price Per Night</label>
                                    <input type="number" name="pricePerNight" value="<%= room.pricePerNight %>" required
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Max Guests</label>
                                    <input type="number" name="maxGuests" value="<%= room.maxGuests %>" required
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Duration (days)</label>
                                    <input type="number" name="durationDays" value="<%= room.durationDays %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Total Guests Served</label>
                                    <input type="number" name="totalGuestsServed" value="<%= room.totalGuestsServed %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Rating</label>
                                    <input type="number" step="0.1" name="rating" value="<%= room.rating %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Reviews Count</label>
                                    <input type="number" name="reviewsCount" value="<%= room.reviewsCount %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Is Featured?</label>
                                    <input type="checkbox" name="isFeatured" value="true" class="form-control"
                                        <%=room.isFeatured ? 'checked' : '' %> >
                                </div>
                                <div class="form-group">
                                    <label>Amenities (comma-separated)</label>
                                    <input type="text" name="amenities" value="<%= room.amenities %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Extra Service Per Booking</label>
                                    <input type="number" name="extraPerBooking" value="<%= room.extraService.perBooking %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Extra Service Per Person</label>
                                    <input type="number" name="extraPerPerson" value="<%= room.extraService.perPerson %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Image</label>
                                    <!-- Show current image -->
                                    <img src="<%= room.image.url %>" alt="Current Image" width="150">
                                    <!-- Allow new image upload -->
                                    <input type="file" name="image" class="form-control">

                                </div>
                                <button type="submit" class="btn btn-info">Add Room</button>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

